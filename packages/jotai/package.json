{
  "name": "@orika-js/jotai",
  "version": "1.0.0",
  "description": "Jotai integration for orika-js - Automatic object mapping for Jotai atoms",
  "author": "Steven Lee",
  "license": "MIT",
  "homepage": "https://github.com/stevenleep/orika-js/tree/main/packages/jotai#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenleep/orika-js.git",
    "directory": "packages/jotai"
  },
  "bugs": {
    "url": "https://github.com/stevenleep/orika-js/issues"
  },
  "keywords": [
    "orika-js",
    "jotai",
    "state-management",
    "atoms",
    "mapper",
    "typescript",
    "react"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@orika-js/core": "^1.2.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "jotai": "^2.0.0"
  },
  "devDependencies": {
    "@orika-js/core": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "jotai": "^2.6.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16"
  }
}

