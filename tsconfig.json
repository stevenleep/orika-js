{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false,
    "paths": {
      "@orika-js/core": ["./packages/core/src"],
      "@orika-js/vue3": ["./packages/vue3/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist", "**/node_modules", "**/*.test.ts"]
}

